package com.basic.all;

class Mobile {
	String camera;
	boolean touchScreen;
	int battery;
}

public class AAHelloWorld {

	public static void main(String[] args) {

//		class_name Object_name = newkeyword class_name();
		Mobile xiomi = new Mobile();
		xiomi.battery = 5000
		xiomi.camera = "20MP";
		xiomi.touchScreen = true;

		System.out.println("You mobile features are: Battery: " + xiomi.battery + " Camera: " + xiomi.camera
				+ " Touchscreen: " + xiomi.touchScreen);

	}

}
